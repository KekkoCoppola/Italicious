	<servlet>
		<servlet-name>CatalogoServlet</servlet-name>
		<servlet-class>controller.CatalogoServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CatalogoServlet</servlet-name>
		<url-pattern>/catalogo</url-pattern>


	</servlet-mapping>

	<!-- ADMIN -->
	<servlet>
		<servlet-name>AdminServlet</servlet-name>
